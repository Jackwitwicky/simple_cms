<%= link_to("<< Back to List", sections_path, :class => 'back-link') %>

<div class="sections new">
  <h2>Create Sections</h2>

  <%= form_for(@section) do |f| %>

    <table summary="Section form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.check_box(:visible) %></td>
      </tr>
      <tr>
        <th>Content Type</th>
        <td>
          <%= f.radio_button(:content_type, 'text') %> Text
          <%= f.radio_button(:content_type, 'HTML') %> HTML
        </td>
      </tr>
      <tr>
        <th>Content</th>
        <td><%= f.text_area(:content) %></td>
      </tr>
      <tr>
        <th>Page</th>
        <td><%= collection_select(:section, :page_id, Page.all, :id, :name) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Section") %>
    </div>

  <% end %>
</div>
